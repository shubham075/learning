{{#if alert}}
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    {{alert}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="container-fluid" style="background-color: #508bfc;">
    <div style="height: 10vh;"></div>
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-4">
            <section class="vh-100">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="p-5">
                        <h3 class="mb-5 text-center">Sign in</h3>

                        <form action="/login" method="post" novalidate>
                            <div class="text-center mb-3">
                                <button type="button" class="btn btn-link btn-floating mx-1">
                                    <i class="fab fa-facebook-f"></i>
                                </button>

                                <button type="button" class="btn btn-link btn-floating mx-1">
                                    <i class="fab fa-google"></i>
                                </button>

                                <button type="button" class="btn btn-link btn-floating mx-1">
                                    <i class="fab fa-twitter"></i>
                                </button>

                                <button type="button" class="btn btn-link btn-floating mx-1">
                                    <i class="fab fa-github"></i>
                                </button>
                            </div>

                            {{!--
                            <hr class="my-4"> --}}
                            <p class="text-center">OR</p>

                            <!-- Email input -->
                            <div class="mb-3">
                                <div class="form-outline">
                                    <input type="email" id="loginName" name="email" class="form-control" />
                                    <label class="form-label" for="loginName">Email</label>
                                </div>
                                {{#if err.email}}
                                <p style="color: red; margin: 0; padding: 0">{{err.email}}</p>
                                {{/if}}
                            </div>


                            <!-- Password input -->
                            <div class="mb-3">
                                <div class="form-outline">
                                    <input type="password" id="loginPassword" name="password" class="form-control" />
                                    <label class="form-label" for="loginPassword">Password</label>
                                </div>
                                {{#if err.password}}
                                <p style="color: red; margin: 0; padding: 0">{{err.password}}</p>
                                {{/if}}
                            </div>


                            <!-- 2 column grid layout -->
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <div class="form-check mb-3 mb-md-0">
                                        <input class="form-check-input" type="checkbox" value="remember_user"
                                            id="loginCheck" checked />
                                        <label class="form-check-label" for="loginCheck"> Remember me
                                        </label>
                                    </div>
                                </div>

                                <div class="col-md-6 d-flex justify-content-end">
                                    <a href="#!">Forgot password?</a>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary btn-block mb-4">LOGIN</button>
                        </form>

                        <p class="text-center" style="color: #393f81;">
                            Don't have an account?
                            <a href="/register" style="color: #393f81;">
                                Register here
                            </a>
                        </p>

                    </div>
                </div>
            </section>
        </div>
    </div>
</div>