<div class="container" style="margin-top: 12vh;">
    {{#each data}}
    <form action="/admin/update/{{this.productCategory}}/{{this.id}}" method="post">
        <div class="mt-3" id="addForm">
            <div class="form-floating mb-2">
                <input type="text" class="form-control" name="productName" id="floatingInput"
                    value="{{this.productName}}">
                <label for="floatingInput">Product Name</label>
            </div>
            <div class="form-floating mb-2">
                <input type="text" class="form-control" name="productDescription" id="floatingName"
                    value="{{this.productDescription}}">
                <label for="floatingName">Descrpition</label>
            </div>
            <div class="form-floating mb-2">
                <input type="url" class="form-control" name="productImage" id="floatingURL"
                    value="{{this.productImage}}">
                <label for="floatingURL">Image url</label>
            </div>
            <div class="form-floating mb-2">
                <input type="number" class="form-control" name="productPrice" id="Price" value="{{this.productPrice}}">
                <label for="Price">Price</label>
            </div>
            <div class="form-floating mb-2">
                <input type="number" class="form-control" name="discountValue" id="discount"
                    value="{{this.discountValue}}">
                <label for="discount">discount value in %</label>
            </div>
            <div class="form-floating mb-2">
                <input type="number" class="form-control" name="productQuantity" id="Quantity"
                    value="{{this.productSize}}">
                <label for="Quantity">Each Quantity</label>
            </div>
            <div class="form-floating mb-2">
                <input type="number" class="form-control" name="stockValue" id="Stock" value="{{this.stockValue}}">
                <label for="Stock">Stock Vlaue</label>
            </div>
            <div class="form-floating mb-2">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1"
                        value="InStock" checked>
                    <label class="form-check-label" for="inlineRadio1">In stock</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2"
                        value="OutStock">
                    <label class="form-check-label" for="inlineRadio2">out of stock</label>
                </div>
            </div>
            {{!-- onclick="editUser({{this.productCategory}},{{this.id}})"--}}
            <button class="btn btn-success" type="submit">Update
                Product</button>
        </div>
    </form>
    {{/each}}
</div>

<script>

    function editUser(category, id) {
        swal("Are you sure you want to do this?", {
            buttons: {
                cancel: {
                    text: 'Back',
                    value: false
                },
                update: {
                    text: 'Updata data',
                    value: true
                }
            }
        }).then((value) => {
            switch (value) {
                case true:
                    swal("data updated", "success");
                    location.href = `/admin/update/${category}/${id}`
                    break;
                case false:
                    swal("back to form!!");
                    location.href = `/admin/home`
                    break;
            }
        })
    }


    function updateUser(category, id) {
        swal({
            title: "Are you sure?",
            icon: "warning",
            buttons: {
                cancel: 'Back',
                update: {
                    text: 'update data',
                    value: true
                }
            }
        })
            .then((value) => {
                if (value == true) {
                    swal("Your records has been updated!", {
                        icon: "success",
                    })
                    location.href = `/admin/edit/${category}/${id}`;
                } else {
                    swal("No any updates to the record!");
                }
            });

    }
</script>