<div class="container" style="margin-top: 12vh;">
    <div class="row mt-4">
        <div class="col-8">

            <form action="/admin/addProduct" method="post">
                <select name="category" id="productCategory" class="form-select" onchange="openForm()">
                    <option value="none" selected></option>
                    <option value="dairy">Dairy Products</option>
                    <option value="grain">Grain Products</option>
                    <option value="book">Books</option>
                    <option value="meat">Meat Products</option>
                </select>

                <div class="mt-3" id="addForm" style="display: none;">
                    <div class="form-floating mb-2">
                        <input type="text" class="form-control" name="productName" id="floatingInput">
                        <label for="floatingInput">Product Name</label>
                    </div>
                    <div class="form-floating mb-2">
                        <input type="text" class="form-control" name="productDescription" id="floatingName">
                        <label for="floatingName">Descrpition</label>
                    </div>
                    <div class="form-floating mb-2">
                        <input type="url" class="form-control" name="productImage" id="floatingURL">
                        <label for="floatingURL">Image url</label>
                    </div>
                    <div class="form-floating mb-2">
                        <input type="number" class="form-control" name="productPrice" id="floatingNumber">
                        <label for="floatingNumber">Price</label>
                    </div>
                    <div class="form-floating mb-2">
                        <input type="number" class="form-control" name="discountValue" id="floatingNumber">
                        <label for="floatingNumber">discount value in %</label>
                    </div>
                    <div class="form-floating mb-2">
                        <input type="number" class="form-control" name="productQuantity" id="floatingNumber">
                        <label for="floatingNumber">Each Quantity</label>
                    </div>
                    <div class="form-floating mb-2">
                        <input type="number" class="form-control" name="stockValue" id="floatingNumber">
                        <label for="floatingNumber">Stock Vlaue</label>
                    </div>
                    <button type="submit" class="btn btn-success float-end">Add Product</button>
                </div>
            </form>

        </div>
    </div>
</div>
<script>
    function openForm() {
        let status = document.getElementById("productCategory");
        if (status.value == "none") {
            document.getElementById("addForm").style.display = "none";
        }
        else {
            document.getElementById("addForm").style.display = "block";
        }
    }
</script>