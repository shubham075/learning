                    <!-- price -->
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div>
                            <span class="text-decoration-line-through text-muted">${{this.productPrice}}</span>
                            <span class="text-dark">${{this.finalPrice}}</span>
                        </div>
                        <!-- btn -->
                        <div><a href="/addToCart/{{this.productCategory}}/{{this.id}}" class="btn btn-success">
                                <i class='bx bxs-cart-add bx-tada'></i>
                                Add
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        {{/each}}
    </div>
