                        </div>
                        <a href="/home/{{this.productCategory}}/{{this.id}}">
                            <img src={{this.productImage}} alt="Grocery" class="mb-3" height="150vh"></a>
                    </div>
                    <!-- heading -->
                    {{!-- <div class="text-small mb-1"><a href="#!"
                            class="text-decoration-none text-muted"><small>{{this.productCategory}}</small></a></div>
                    --}}

